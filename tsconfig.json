{
  "compilerOptions": {
    "outDir": "./dist",
    "strict": true,
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@helpers/*": ["src/helpers/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
